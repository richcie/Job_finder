<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/freelancerAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/logo1"
                app:shapeAppearanceOverlay="@style/CicleImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/freelancerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Freelancer Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/freelancerRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI Designer"
                    android:textColor="@color/purple"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied Skills:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/freelancerSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills list"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                android:background="@drawable/grey_bg"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cover Letter:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/freelancerDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cover letter / description text"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                android:background="@drawable/grey_bg"
                android:padding="8dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            
            <TextView
                android:id="@+id/appliedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied 2 days ago"
                android:textColor="@color/purple"
                android:textSize="11sp"
                android:textStyle="italic" />

        </LinearLayout>

        
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:visibility="gone" />

        
        <LinearLayout
            android:id="@+id/actionButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeFreelancerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="REMOVE"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@color/red" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/contactFreelancerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="CONTACT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@color/purple" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 