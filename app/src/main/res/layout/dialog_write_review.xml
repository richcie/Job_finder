<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_bg"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:paddingHorizontal="24dp">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Write a Review"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_block"
            android:tint="@color/darkGrey"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:background="@drawable/grey_bg"
        android:padding="16dp">

        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/grey_full_corner_bg"
            android:src="@drawable/logo1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share your experience working with this company"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="★"
            android:textSize="32sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="★"
            android:textSize="32sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="★"
            android:textSize="32sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="★"
            android:textSize="32sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="★"
            android:textSize="32sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <TextView
        android:id="@+id/ratingDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to rate"
        android:textColor="@color/darkGrey"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review Description"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxStrokeColor="@color/purple"
        app:hintTextColor="@color/purple"
        app:errorEnabled="true"
        app:helperTextEnabled="true"
        app:helperTextTextColor="@color/darkGrey"
        app:errorTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reviewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Share your experience working with this company..."
            android:minLines="4"
            android:maxLines="6"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="500" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your review will help other freelancers make informed decisions"
        android:textColor="@color/darkGrey"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/darkGrey"
            android:layout_marginEnd="12dp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Review"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout> 